<odoo>
    <data>
        <record id="mrp_production_view_form" model="ir.ui.view">
            <field name="name">mrp.production.view.form</field>
            <field name="model">mrp.production</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/field[@name='show_produce_all']" position="after">
                    <field name="material_request_id" invisible="True"/>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                    <button name="action_view_material_request" string="Material Request" type="object"
                            invisible="not material_request_id" class="oe_stat_button">
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>