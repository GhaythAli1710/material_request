<odoo>
    <data>
        <record id="mrp_eco_view_form" model="ir.ui.view">
            <field name="name">mrp.eco.view.form</field>
            <field name="model">mrp.eco</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="plm.mrp_eco_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='tag_ids']" position="before">
                    <field name="material_request_id" invisible="True"/>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                    <button name="action_view_material_request" string="Material Request" type="object"
                            invisible="not material_request_id" class="oe_stat_button">
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>