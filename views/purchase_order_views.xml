<odoo>
    <data>
        <record id="purchase_order_view_form" model="ir.ui.view">
            <field name="name">purchase.order.view.form</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='partner_ref']" position="after">
                    <field name="material_request_ids" invisible="True"/>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                    <button name="action_view_material_request" string="Material Request" type="object"
                            invisible="not material_request_ids" class="oe_stat_button">
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>